<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 상단 바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="당근무침"
                android:textColor="#0023A7"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginBottom="15dp"
            android:background="#0023A7" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:columnCount="4"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/item_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="4dp"
                android:layout_marginLeft="13dp"
                android:clickable="true"
                android:focusable="true"
                card_view:cardCornerRadius="15dp"
                card_view:cardElevation="4dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dayli"> <!-- 전체 배경 -->

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:background="@drawable/daylimtitem"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/ic_carrot" />

                </FrameLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="당근무침"
                android:layout_marginLeft="50dp"
                android:textColor="#0023A7"
                android:textSize="25dp"
                android:textStyle="bold" />

        </GridLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/item_context"
            android:layout_width="375dp"
            android:layout_height="450dp"
            android:layout_margin="4dp"
            android:layout_marginLeft="13dp"
            android:clickable="true"
            android:focusable="true"
            card_view:cardCornerRadius="15dp"
            card_view:cardElevation="4dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dayli"> <!-- 전체 배경 -->

                <TextView
                    android:layout_width="365dp"
                    android:layout_height="440dp"
                    android:layout_gravity="center"
                    android:background="@drawable/daylimtitem"
                    android:text="레시피" />

            </FrameLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <!-- 네비게이션 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#0023A7"> <!-- 배경색 설정 -->

        <ImageButton
            android:id="@+id/btnNav1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_day_nocolor"
            android:background="@android:color/transparent"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/btnNav2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_book_nocolor"
            android:background="@android:color/transparent"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/btnNav3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_refrigerator"
            android:background="@android:color/transparent"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/btnNav4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_re_nocolor"
            android:background="@android:color/transparent"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/btnNav5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_setting_nocolor"
            android:background="@android:color/transparent"
            android:scaleType="centerInside" />
    </LinearLayout>


</LinearLayout>
