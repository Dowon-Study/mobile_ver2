<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 상단 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="내 냉장고"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinnerMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"/>
    </LinearLayout>

    <!-- 채소 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="채소"
            android:textSize="16sp"
            android:padding="8dp"/>

        <Button
            android:id="@+id/btnAddVeg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_gravity="end"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:padding="8dp">

        <Button
            android:id="@+id/btnVeg1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_carrot"
            android:layout_margin="4dp"/>
        <Button
            android:id="@+id/btnVeg2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_carrot"
            android:layout_margin="4dp"/>
        <!-- 추가 버튼 -->
    </GridLayout>

    <!-- 육류 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="육류"
            android:textSize="16sp"
            android:padding="8dp"/>

        <Button
            android:id="@+id/btnAddMeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_gravity="end"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:padding="8dp">

        <Button
            android:id="@+id/btnMeat1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_meat"
            android:layout_margin="4dp"/>
        <Button
            android:id="@+id/btnMeat2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_meat"
            android:layout_margin="4dp"/>
        <!-- 추가 버튼 -->
    </GridLayout>

    <!-- 유제품 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="유제품"
            android:textSize="16sp"
            android:padding="8dp"/>

        <Button
            android:id="@+id/btnAddDairy"
        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_gravity="end"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:padding="8dp">

        <Button
            android:id="@+id/btnDairy1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_meat"
            android:layout_margin="4dp"/>
        <Button
            android:id="@+id/btnDairy2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_meat"
            android:layout_margin="4dp"/>
        <!-- 추가 버튼 -->
    </GridLayout>
    </LinearLayout>